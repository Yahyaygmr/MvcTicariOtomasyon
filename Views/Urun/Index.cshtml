@using MvcTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürünler</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış</th>
        <th>Satış</th>
        <th>Durum</th>
        <th>Görsel</th>
        <th>Kategori</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UrunId</td>
            <td>@item.UrunAd</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyat</td>
            <td>@item.SatisFiyat</td>
            <td>@item.Durum</td>
            <td>@item.UrunGorsel</td>
            <td>@item.Kategori.KategoriAd</td>
            <td>
                <a href="/Urun/UrunSil/@item.UrunId" class="btn btn-sm btn-danger">Sil</a>
                <a href="/Urun/UrunGuncelle/@item.UrunId" class="btn btn-sm btn-secondary">Güncelle</a>
            </td>


        </tr>
    }
</table>

<a href="/Urun/UrunEkle" class="btn btn-primary">+ Yeni Ürün</a>

